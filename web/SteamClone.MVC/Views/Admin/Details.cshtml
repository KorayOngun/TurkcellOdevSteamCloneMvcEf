@model SteamClone.Dto.Response.UserDisplayForAdmin

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserMail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserMail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reviews)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Reviews)
            {
                <div>game Id => @item.GameId  </div>
                <div>@item.Review</div>
                <br />
            }
        </dd>
    </dl>
</div>
